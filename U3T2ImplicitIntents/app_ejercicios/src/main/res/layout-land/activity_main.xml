<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etUri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="350dp"
        android:layout_marginTop="40dp"
        android:text="@string/et_uri"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btOpenUri"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:drawableRight="@drawable/ic_baseline_web_24"
        android:text="Open Website"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/etUri"
        app:layout_constraintTop_toTopOf="@+id/etUri" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="350dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/et_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btOpenUri" />

    <Button
        android:id="@+id/btOpenLocation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:drawableRight="@drawable/ic_baseline_location_on_24"
        android:text="Open Location"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/etLocation"
        app:layout_constraintTop_toTopOf="@+id/etLocation" />

    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="350dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/et_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btOpenLocation" />

    <Button
        android:id="@+id/btShareText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:drawableRight="@drawable/ic_baseline_share_24"
        android:text="Share this Text"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/etText"
        app:layout_constraintTop_toTopOf="@+id/etText" />

</androidx.constraintlayout.widget.ConstraintLayout>